<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cantidad</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.name, category %></td>
        <td><%= category.products.size %></td>
        <td><%= link_to 'Edit', edit_category_path(category),class:'btn btn-primary btn-sm' %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger btn-sm text-light' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

